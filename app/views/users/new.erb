<div class="container">
  <div class="form col-md-6">
    <h3>Create a Yelpy Account! </h3>

    <% if @errors %>
    <%= erb :"_errors" %>
    <% end %>


    <form class="userForm" method="POST" action="/users">
      <div class="form-group">
        <label> Username: </label>
        <br>
        <input class="form-control" type="text" name="user[username]" placeholder="Enter your username"><br>
        <label> Email: </label><br>
        <input class="form-control" type="text" name="user[email]" placeholder="Email"><br>
        <label> Password: </label><br>
        <input class="form-control" type="password" name="user[password]" placeholder="Password"><br>
        <button class="btn btn-primary"" type="submit" value="Sign me Up"> Sign me Up </button>
      </div>
    </form>
    </div>
</div>
